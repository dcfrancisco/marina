{
  "scopeName": "source.marina",
  "patterns": [
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#comments" },
    { "include": "#functions" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.marina",
          "match": "\\b(if|else|endif|while|enddo|for|next|return|function|local|global)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.marina",
          "match": "\\b[A-Za-z_][A-Za-z0-9_]*(?=\\s*\\()"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.marina",
          "match": "\"([^\"\\\\]|\\\\.)*\""
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.marina",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.marina",
          "match": "//.*$"
        }
      ]
    }
  }
}
